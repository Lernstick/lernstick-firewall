#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@ 

override_dh_install:
	dh_auto_install
	install -D -o root -g root -m 755 lernstick-firewall debian/lernstick-firewall/usr/sbin/lernstick-firewall
	install -D -o root -g root -m 755 02lernstick-firewall debian/lernstick-firewall/etc/NetworkManager/dispatcher.d/02lernstick-firewall
	for f in lernstick-firewall.conf url_whitelist net_whitelist tinyproxy.conf ; do \
		install -D -o root -g root -m 640 $$f debian/lernstick-firewall/etc/lernstick-firewall/$$f ; \
	done

override_dh_fixperms:
	dh_fixperms --exclude /etc/lernstick-firewall

override_dh_installinit:
	dh_installinit --restart-after-upgrade
